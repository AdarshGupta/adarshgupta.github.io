//- Reusable nav content and one place to change
mixin nav-content()
    ul
        li: a(href="#about") About
        li: a(href="#work") Work
        li: a(href="#education") Academics
        li: a(href="#skills") Skills
        li: a(href="#hobbies") Hobbies
        li: a(href="#contact") Contact


.mobile-nav
    +nav-content()

header
    .header-position
        h1.logo Adarsh Gupta

        nav.site-nav
            +nav-content()
        
        .social-links.flex.flex--space-around
            a(href="https://github.com/AdarshGupta" target="_blank").icons
                i.fa-brands.fa-github
            a(href="https://www.linkedin.com/in/adarsh035" target="_blank").icons
                i.fa-brands.fa-linkedin
            a(href="mailto:adarsh035@gmail.com").icons
                i.fa-regular.fa-envelope-open

        .mobile-nav-toggle: span